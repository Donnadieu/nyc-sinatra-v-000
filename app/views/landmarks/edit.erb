<h1>Update <%= @landmark.name %></h1>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name: </label>
  <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">

  <br></br>

  <label for="year_completed">Year Completed: </label>
  <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">

  <br></br>

  <input type="submit" name="Edit Landmark" value="Edit Landmark">

</form>
